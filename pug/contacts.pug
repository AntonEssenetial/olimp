extends layout
include mixins.pug

block content
  -var pageId = 5;
  -var subId2 = 5;
  +header-menu-2()
  section.section__catalog
    .container-wrapper
      +bread-crumbs([
        'Главная страница',
        'О компании',
        'Контакты'
      ])
      h2 Контакты
  section.section__blog
    .container-wrapper
      .row
        .col__225
          +sub-menu()
          .company
            span.icon-doc
            a(href="") Реквизиты компании
            span .doc, 683 Kb
        .auto__width.section__contacts
          .section__adr
            ul
              li <span>Адрес:</span> г. Вологда, ул. Благовещенская, д. 47, 2й этаж
              li <span>Телефон:</span> (8172) 70-41-70
              li <span>Время работы:</span> 
              li <span>Пн.-Пт.</span> 9:00 - 18:00
              li <span>Суббота</span> 11:00 - 15:00
          .section__map 
            img(src="images/background/map.jpg", alt="")
    .section__banner.animated.fadeIn
      .container-wrapper
        .section__call__bg-2
          .section__call__close.jsClose Закрыть окно
          .row.center.between
            .col__42.col_margin
              .section__call__title Не хотите искать сами?
                span Оставьте свой номер телфона и мы <br> перезвоним вам!
            .col__40
              +call
  section.section__spectialist-wrapper.section__spectialist-wrapper_reset
    .container-wrapper    
      h2 Наши специалисты
      .row.between.section__specialist
        .col__24.section__specialist__item 
          .section__specialist__img
            img(src="images/background/bg5.jpg", alt="")
            .section__specialist__tooltip 
          a(href="").section__specialist__link Анна Иванова
          p Специализируется по центральной части города и району улицы Дальняя
          span.section__specialist__phone +7 921 232 37 76
        .col__24.section__specialist__item 
          .section__specialist__img
            img(src="images/background/bg6.jpg", alt="")
            .section__specialist__tooltip 
          a(href="").section__specialist__link Константин Константинопольский
          p Специализируется по центральной части города и району улицы Дальняя
          span.section__specialist__phone +7 921 232 37 76
        .col__24.section__specialist__item.active 
          .section__specialist__img
            img(src="images/background/bg7.jpg", alt="")
            .section__specialist__tooltip 
              span Лучший работник месяца
          a(href="").section__specialist__link Артем Смирнов
          p Специализируется по центральной части города и району улицы Дальняя
          span.section__specialist__phone +7 921 232 37 76
        .col__24.section__specialist__item 
          .section__specialist__img
            img(src="images/background/bg9.jpg", alt="")
